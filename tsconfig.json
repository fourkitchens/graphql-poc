{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "pretty": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
